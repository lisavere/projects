@model WebApplication15.Models.Otdely

@{
    ViewBag.Title = "Add_otd_new";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новый отдел</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)



        <div class="form-group">
            <label class="control-label col-md-2">Введите наименование отдела</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naimen_otd)
                @Html.ValidationMessageFor(model => model.Naimen_otd)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Справочник отделов", "AddOtdely")
</div>
